<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </p>

  <p>
    <%= form.label :image_name %>
    <%= form.text_field :image_name %>
  </p>

  <p>
    <%= form.label :rule %>
    <%= form.text_field :rule %>
  </p>

  <p>
    <%= form.label :rule_value %>
    <%= form.text_field :rule_value %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', admin_badges_path %>
