<tr>
  <td>
    <%= content_tag :p, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test? @test : test %>
  </td>
  <td><%= test_difficulty(test) %></td>
  <td><%= test.questions.count %></td>
  <td><%= test.timer_minutes %></td>
  <td><%= link_to 'Show', admin_test_path(test) %></td>
  <td><%= link_to 'Edit',
                  edit_admin_test_path(test),
                  class: 'form-inline-link',
                  data: { test_id: test.id } %>
  </td>
  <td><%= link_to 'Delete',
                  admin_test_path(test),
                  method: :delete,
                  data: { confirm: 'Are you sure about that?' } %>
  </td>
</tr>
